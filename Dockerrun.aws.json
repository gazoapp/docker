{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "data",
      "host": {
        "sourcePath": "/var/app/current"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "data",
      "image": "gazoapp/data",
      "essential": true,
      "memory": 128,
      "mountPoints": [
        {
          "sourceVolume": "data",
          "containerPath": "/data/www"
        }
      ]
    },
    {
      "name": "web",
      "image": "gazoapp/php",
      "essential": true,
      "memory": 512,
      "volumesFrom": [
        {
          "sourceContainer": "data",
          "readOnly": true
        }
      ]
    },
    {
      "name": "composer",
      "image": "gazoapp/composer",
      "essential": true,
      "memory": 128,
      "command": [
        "install"
      ],
      "volumesFrom": [
        {
          "sourceContainer": "data",
          "readOnly": true
        }
      ]
    },
    {
      "name": "phinx",
      "image": "gazoapp/phinx",
      "essential": true,
      "memory": 128,
      "command": [
        "migrate"
      ],
      "volumesFrom": [
        {
          "sourceContainer": "data",
          "readOnly": true
        }
      ]
    }
  ]
}
